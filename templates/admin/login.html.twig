

{% block body %}
 {% if error %}
        <div class="alert alert-danger">Bad username or password</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

<form method="post" action="{{ path('admin_login')}}">

<div class="container">

<div class="row">

<div class="col-md-6 offset-md-3 mt-5 mb-5">




    <h1 class="h3 mb-3 font-weight-normal text-center">Acc√©s administrateur</h1>

        

    <label for="inputEmail">Email</label>
   <input type="text"  name="_username" id="_username" class="form-control" required autofocus>
      <br><br>

    <label for="inputPassword">Password</label>
    <input type="password" name="_password" id="_password" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-md btn-primary mt-4 mb-5 d-flex mx-auto pl-5 pr-5" type="submit">
        Se connecter
    </button>


</div>
</div>
</div>
</form>
{% endblock %}
