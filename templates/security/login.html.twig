<html>
    <head>
        <meta charset="UTF-8" />
        <title></title>
    </head>
    <body>
        <div id="header">
        {% include('header.html.twig') %}
        </div>

        <div>
        {% block content %}
        <center>
       <div class="col-md-5">
       <div class="card bg-light mb-5">
       <div class="card-header text-center">
   
{% for message in app.flashes("success") %}

<div class="alert alert-success text-center mx-auto w-50 d-bloc"> {{message}} </div>

{% endfor %}



<form method="post" action="{{ path('app_login')}}">
    {% if error %}
        <div class="alert alert-danger">Bad username or password</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <br>
    <label for="inputEmail">Email</label>
      <input type="text" value="{{last_username}}" name="_username" class="form-control" required autofocus>
      <br><br>

    <label for="inputPassword">Password</label>
    <input type="password" name="_password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

   

        <div class="checkbox mb-3">
        <br><br>
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    

    <button class="btn btn-lg btn-primary" type="submit" >
        Sign in
    </button>
</form></div>
        </div> </div></center>
        {% endblock %}
       


        <div id="footer">
        {% include('footer.html.twig') %}
        </div>
    </body>


